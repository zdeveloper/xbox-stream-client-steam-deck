{
  "name": "xbox-streaming",
  "version": "1.2.0",
  "description": "stream xbox locally on your steam dec",
  "main": ".webpack/main",
  "scripts": {
    "start": "ISDEV=true electron-forge start",
    "startfullscreendisabled": "ISDEV=true electron-forge start -- --disable-fullscreen",
    "startconnect": "ISDEV=true electron-forge start -- --connect=F400000000000000",
    "compile": "electron-forge make",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts .",
    "builder": "electron-builder",
    "build-flatpak": "electron-builder --linux flatpak"
  },
  "build": {
    "appId": "steam-deck.xbox-xcloud.client",
    "mac": {
      "target": {
        "target": "dmg",
        "arch": [
          "universal"
        ]
      },
      "mergeASARs": false,
      "icon": "src/assets/icon.icns"
    },
    "win": {
      "icon": "src/assets/icon.ico"
    },
    "linux": {
      "target": "flatpak",
      "category": "Game"
    },
    "flatpak":{
      "runtime": "org.freedesktop.Platform.GL.default",
      "runtimeVersion": "22.08",
      "category": "Game"
    },
    "nsis": {
      "shortcutName": "xHome Streaming",
      "runAfterFinish": true
    }
  },
  "author": "UnknownSKL <info@jimkroon.nl>",
  "license": "MIT",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "url": "^0.11.0",
    "xbox-webapi": "^1.4.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.67",
    "@electron-forge/maker-deb": "^6.0.0-beta.67",
    "@electron-forge/maker-rpm": "^6.0.0-beta.67",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.67",
    "@electron-forge/maker-zip": "^6.0.0-beta.67",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.67",
    "@types/express": "^4.17.14",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "@vercel/webpack-asset-relocator-loader": "^1.7.3",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "electron": "20.2.0",
    "electron-builder": "^23.6.0",
    "eslint": "^8.25.0",
    "eslint-plugin-import": "^2.26.0",
    "express": "^4.18.2",
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "https-browserify": "^1.0.0",
    "mime": "^3.0.0",
    "node-loader": "^2.0.0",
    "stream-http": "^3.2.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "webpack-cli": "^4.10.0",
    "xbox-xcloud-player": "^0.1.3"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "xbox_xcloud_client"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.ts",
                  "name": "main_window"
                },
                {
                  "html": "./src/webui.html",
                  "js": "./src/webui.ts",
                  "name": "webui"
                }
              ]
            },
            "devContentSecurityPolicy": "worker-src 'self' blob: data:; img-src http://localhost:3000 https://store-images.s-microsoft.com https://*.xboxlive.com data:; media-src 'unsafe-inline' blob:; connect-src 'self' https://displaycatalog.mp.microsoft.com https://*.xbox.com https://*.xboxlive.com; default-src 'self' 'unsafe-inline' data:; script-src 'self' 'unsafe-eval' 'unsafe-inline' data:"
          }
        ]
      ]
    }
  }
}
